<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <queries>
        <package android:name="com.junkfood.seal" />
    </queries>

    <application
        android:name="project.pipepipe.app.PipePipeApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.PipePipe" >
        <profileable
            android:shell="true"
            tools:targetApi="29" />

        <activity
            android:name="project.pipepipe.app.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.PipePipe"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:supportsPictureInPicture="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- BiliBili URLs -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https" />
                <data android:scheme="http" />
                <data android:host="bilibili.com" />
                <data android:host="www.bilibili.com" />
                <data android:host="b23.tv" />
                <data android:host="space.bilibili.com" />
                <data android:host="live.bilibili.com" />
            </intent-filter>

            <!-- NicoNico URLs -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https" />
                <data android:scheme="http" />
                <data android:host="nicovideo.jp" />
                <data android:host="www.nicovideo.jp" />
                <data android:host="nico.ms" />
                <data android:host="ch.nicovideo.jp" />
            </intent-filter>

            <!-- YouTube URLs -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https" />
                <data android:scheme="http" />
                <data android:host="youtube.com" />
                <data android:host="www.youtube.com" />
                <data android:host="m.youtube.com" />
                <data android:host="youtu.be" />
            </intent-filter>

            <!-- Handle shared text (URLs) -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <service
            android:name="project.pipepipe.app.service.PlaybackService"
            android:exported="true"
            android:foregroundServiceType="mediaPlayback">
            <intent-filter>
                <action android:name="androidx.media3.session.MediaLibraryService"/>
            </intent-filter>
        </service>
        <service
            android:name="project.pipepipe.app.service.SleepTimerService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
        <service
            android:name="androidx.work.impl.foreground.SystemForegroundService"
            android:exported="false"
            android:foregroundServiceType="dataSync"
            tools:node="merge" />
        <receiver
            android:name="project.pipepipe.app.service.FeedFailureReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="project.pipepipe.app.SHOW_FEED_FAILURES" />
                <action android:name="project.pipepipe.app.SHOW_STREAMS_NOTIFICATION_FAILURES" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="project.pipepipe.app.service.StreamsNotificationReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="project.pipepipe.app.OPEN_CHANNEL" />
            </intent-filter>
        </receiver>
    </application>

</manifest>